<link rel="stylesheet" href="./public/css/register.css">

<div class="body">
    <div class="loginConteiner">

        <div class="tituloFormulario">
            <p>Iniciar sesion</p>
        </div>
        <form class="w3-container formulario">

            <div class="campo">
                <label>Nombre</label>
                <input class="w3-input w3-border w3-round-large" type="text">
            </div>

            <div class="juntos">
            <div class="campo nacimiento">
                <label>Año de nacimiento</label>
                <input class="w3-input w3-border w3-round-large" type="date">
            </div>

            <div class="campo sexo">
                <label>Sexo</label>
                <select class="w3-input w3-border w3-round-large">
                    <option>Hombre</option>
                    <option>Mujer</option>
                    <option>Otro</option>
                </select>
            </div>
            </div>

            <div class="campo">
                <label>Direccion</label>
                <input class="w3-input w3-border w3-round-large" type="text">
            </div>

            <div class="campo">
                <label>Correo</label>
                <input class="w3-input w3-border w3-round-large" type="text">
            </div>

            <div class="campo">
                <label>Nombre de usuario</label>
                <input class="w3-input w3-border w3-round-large" type="text">
            </div>

            <div class="campo">
                <label>Contraseña</label>
                <input class="w3-input w3-border w3-round-large" type="text">
            </div>

            <div class="campo">
                <label>Repetir Contraseña</label>
                <input class="w3-input w3-border w3-round-large" type="text">
            </div>

            <div class="campo">
                <label>Foto de perfil</label>
                <input class="w3-input w3-border w3-round-large" type="file">
            </div>

            <button class="w3-btn  w3-round-xlarge">Registrarse</button>
        </form>

    </div>
    <img class="mono" src="./public/images/monos/mono_register.png">
</div>
